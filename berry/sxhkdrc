# terminal emulator
super + Return
	st

# program launcher
super + d
	dmenu_run

# browser 
super + i
	firefox

# scrot
super + s
	scrot

# reload autostart
super + r
	/home/gmk/.config/berry/autostart

# audio
XF86Audio{RaiseVolume,LowerVolume}
	amixer set Master {5%+,5%-}

XF86AudioMute
	amixer set Master toggle

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# exit berry
super + shift + x
	killall Xorg

super + {h, j, k, l}
    berryc window_move {-10 0, 0 10, 0 -10, 10 0}

super + shift + {h, j, k, l}
    berryc window_resize {-10 0, 0 10, 0 -10, 10 0}

super + shift + p
	berryc window_resize 10 10

super + {1-9}
    berryc switch_workspace {0-9}

super + shift + {1-9}
    berryc send_to_workspace {0-9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

alt + l
    berryc snap_right

alt + h
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus
