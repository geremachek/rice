#!/bin/sh

cp ~/.vimrc ~/repos/rice/.vimrc
cp ~/.bashrc ~/repos/rice/.bashrc
cp ~/.xinitrc ~/repos/rice/.xinitrc
rm -rf ~/repos/rice/.scripts
cp -r ~/.scripts ~/repos/rice/
cp ~/.config/berry/autostart ~/repos/rice/berry/autostart
cp ~/.config/berry/sxhkdrc ~/repos/rice/berry/sxhkdrc
cp -r ~/.cache/wal/schemes ~/repos/rice/schemes
cp -r ~/.xmonad ~/repos/rice
cp ~/.Xresources ~/repos/rice/.Xresources
