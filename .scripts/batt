#!/bin/bash

batt=$(upower -i /org/freedesktop/UPower/devices/battery_BAT0 | awk '/percentage:/{print $2}')

state=$(upower -i /org/freedesktop/UPower/devices/battery_BAT0 | awk '/state:/{print $2}')

if [ "${state}" == "charging" ]
then
	t="ðŸ”Œ "
else
	t="ðŸ”‹"
fi

echo "$t$batt"
echo "$t$batt"

if [ ${batt%?} -gt 50 ]
then
	echo "#8c9440"
elif [ "${state}" == "charging" ] 
then
	echo "#8c9440"
elif [ ${batt%?} -lt 20 ]
then
	echo "a54242"
else
	echo "#FF8000"
fi
